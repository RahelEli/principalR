<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usuario.ConsulAPP.Farmacia"
    android:background="#3e3ea2">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Farmacias Managua"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="#0fcd65"
        android:textSize="30dp"

        />

    <Button
        android:id="@+id/buscar"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar Farmacia"
        android:textSize="20dp"
        android:layout_gravity="bottom"
        android:textAlignment="center"
        />


    <ListView
        android:id="@+id/lisFarma"
        android:layout_width="wrap_content"
        android:layout_height="371dp"
        android:theme="@android:style/Widget.Spinner.DropDown"
        android:background="@android:color/holo_green_light"/>

</FrameLayout>
